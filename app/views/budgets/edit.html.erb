<section>
	<div class="close">
		<%= link_to authenticated_root_path do %>
			<i class="fas fa-arrow-left"></i>
		<% end %>
	</div>

	<div class="sign-wrap">
    <h3 class="md-heading text-center mb-3">Top up Budget</h3>
		<div class="fs-4 sign-card">
			<%= form_with model: @budget  do |f| %>

				<% if f.object.errors.any? %>
					<div class="alert alert-danger error-container">
						<strong>The following errors prevented saving:</strong>
						<ul>
							<% f.object.errors.full_messages.each do |error| %>
								<li><%= error %></li>
							<% end %>
						</ul>
					</div>
				<% end %>
	
				<div class="form-grid">
					<div class="group mb-3">
						<%= f.collection_select :exchange_rate_id, ExchangeRate.pluck(:currency, :id), :last, :first, class: "email-move" %>
					</div>

					<div class="group mb-3">
						<%= f.number_field :amount, placeholder: "Amount", class: "email-move" %>
					</div>
				</div>
		
				<%= f.submit "Add", data: {disable_with: "Adding..."}, class: "signup-btn my-4 py-2" %>
			<% end %>
  	</div>
  </div>
</section>

