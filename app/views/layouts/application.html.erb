<!DOCTYPE html>
<html>
  <head>
    <title>JXpense</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= favicon_link_tag asset_path('favicon-32x32.png') %>
    <script src="https://kit.fontawesome.com/ebfcfb10b5.js" crossorigin="anonymous"></script>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
		<div class="App-container">
			<div class="App-wrapper">
				<% if notice %>
					<p class="alert alert-success text-center flot mb-3"><%= notice %></p>
				<% end %>
				<% if alert %>
					<p class="alert alert-danger text-center flot mb-3"><%= alert %></p>
				<% end %>
				<%= yield %>
			</div>
		</div>
  </body>
</html>
