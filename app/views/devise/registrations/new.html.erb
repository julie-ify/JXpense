<div class="sign-wrap">
  <div class="fs-4 sign-card">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="group mb-3">
        <%= f.text_field :name, autofocus: true, placeholder: "Full name", class: "email-move" %>
      </div>

      <div class="group mb-3">
        <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "email-move" %>
      </div>

      <div class="group mb-3">
        <%= f.number_field :amount, placeholder: "Amount", class: "email-move", value: ''%>
      </div>

      <div class="group mb-3">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "email-move" %>
      </div>

       <div class="group mb-3">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password", class: "email-move" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", data: {disable_with: "Signing..."}, class: "signup-btn my-4 py-2" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
