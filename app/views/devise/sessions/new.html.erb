<div class="sign-wrap">
  <div class="fs-4 sign-card">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="group mb-3">
      <span class="icon-input"><%= fa_icon "user" %></span>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "email-move" %>
    </div>

    <div class="group mb-3">
      <span class="icon-input"><%= fa_icon "lock" %></span>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "email-move" %>
    </div>

    <div class="actions">
      <%= f.submit "Log in", data: {disable_with: "Login..."}, class: "signup-btn my-4 py-2"%>
    </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>

